---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<h1>
    <span class="text-gradient">
        {title}
    </span>
</h1>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Roboto:xxxx@xxxxxxxxxxxxxxxx");
    h1 {
        font-family: "Roboto", sans-serif;
        font-size: 3rem;
        font-weight: 800;
        margin: 0;
    }
    .text-gradient {
        background: linear-gradient(90deg, #ffc107, #ff9800);
        background-clip: text;
        -webkit-background-clip: text;
        color: transparent;
    }
</style> 
